<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <artifactId>conclusion-tree-parent</artifactId>
  <groupId>org.familysearch.ct</groupId>
  <name>FamilySearch Conclusion Tree - Parent Project</name>
  <version>0.2.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <enunciate.version>1.25</enunciate.version>
    <gedcomx.version>0.9.0.RELEASE</gedcomx.version>
    <root.basedir>${project.basedir}</root.basedir>
    <sonar.core.codeCoveragePlugin>jacoco</sonar.core.codeCoveragePlugin>
    <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
    <maven.repository.approved.url>
      https://mvn.fsglobal.net/content/repositories/approved
    </maven.repository.approved.url>
    <maven.repository.approved-snapshots.url>
      https://mvn.fsglobal.net/content/repositories/approved-snapshots
    </maven.repository.approved-snapshots.url>
    <maven.repository.unapproved.url>
      https://mvn.fsglobal.net/content/repositories/unapproved
    </maven.repository.unapproved.url>
    <maven.repository.unapproved-snapshots.url>
      https://mvn.fsglobal.net/content/repositories/unapproved-snapshots
    </maven.repository.unapproved-snapshots.url>
  </properties>

  <modules>
    <module>conclusion-tree-test-support</module>
    <module>conclusion-tree-doc-support</module>
    <module>conclusion-tree-model</module>
    <module>conclusion-tree-rs</module>
    <module>conclusion-tree-rs-impl</module>
    <module>conclusion-tree-service</module>
  </modules>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <scm>
    <connection>scm:git:git@github.com:FamilySearch/conclusion-tree.git</connection>
    <developerConnection>scm:git:git@github.com:FamilySearch/conclusion-tree.git</developerConnection>
    <url>git@github.com:FamilySearch/conclusion-tree.git</url>
  </scm>

  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-idea-plugin</artifactId>
        <configuration>
          <downloadSources>false</downloadSources>
          <downloadJavadocs>false</downloadJavadocs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <systemProperties>
            <property>
              <name>show.output</name>
              <value>${show.output}</value>
            </property>
          </systemProperties>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-resources-plugin</artifactId>
          <version>2.5</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.11</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-idea-plugin</artifactId>
          <version>2.2</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.3.2</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-release-plugin</artifactId>
          <version>2.2.2</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-source-plugin</artifactId>
          <version>2.1.2</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.enunciate</groupId>
          <artifactId>maven-enunciate-plugin</artifactId>
          <version>${enunciate.version}</version>

          <configuration>
            <configFile>${root.basedir}/enunciate.xml</configFile>
          </configuration>

          <dependencies>
            <dependency>
              <groupId>org.gedcomx</groupId>
              <artifactId>enunciate-gedcomx-support</artifactId>
              <version>${gedcomx.version}</version>
            </dependency>
            <dependency>
              <groupId>org.familysearch.ct</groupId>
              <artifactId>conclusion-tree-doc-support</artifactId>
              <version>${project.version}</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>fs-nexus</id>
      <distributionManagement>
        <repository>
          <id>unapproved</id>
          <name>Unapproved Artifact Repository</name>
          <url>https://mvn.fsglobal.net/content/repositories/unapproved</url>
        </repository>
        <snapshotRepository>
          <id>unapproved-snapshots</id>
          <name>Unapproved snapshot Artifact Repository</name>
          <url>https://mvn.fsglobal.net/content/repositories/unapproved-snapshots</url>
       </snapshotRepository>
      </distributionManagement>
    </profile>
    <profile>
      <id>pkg-deploy</id>
      <distributionManagement>
        <repository>
          <id>approved</id>
          <name>Approved Artifact Repository</name>
          <url>${maven.repository.approved.url}</url>
        </repository>
        <snapshotRepository>
          <id>approved-snapshots</id>
          <name>Approved Artifact Repository</name>
          <url>${maven.repository.approved-snapshots.url}</url>
        </snapshotRepository>
      </distributionManagement>
    </profile>
    <profile>
      <id>build-deploy</id>
      <distributionManagement>
        <snapshotRepository>
          <id>approved-snapshots</id>
          <name>Approved Artifact Repository</name>
          <url>${maven.repository.approved-snapshots.url}</url>
        </snapshotRepository>
      </distributionManagement>
      <repositories>
        <repository>
          <id>unapproved</id>
          <name>Unapproved Repository</name>
          <url>${maven.repository.unapproved.url}</url>
        </repository>
      </repositories>
    </profile>
  </profiles>
</project>
