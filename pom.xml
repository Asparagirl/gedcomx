<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <artifactId>gedcomx-parent</artifactId>
  <groupId>org.gedcomx</groupId>
  <name>GEDCOM X Parent Project</name>
  <version>0.1.0.BUILD-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <enunciate.version>1.22</enunciate.version>
    <root.basedir>${project.basedir}</root.basedir>
    <year>${inceptionYear}</year>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>5.14</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.enunciate</groupId>
      <artifactId>enunciate-core-rt</artifactId>
      <version>${enunciate.version}</version>
    </dependency>
  </dependencies>

  <scm>
    <connection>scm:svn:https://vcs.fsglobal.net/svn/model/gedcomx/trunk</connection>
    <developerConnection>scm:svn:https://vcs.fsglobal.net/svn/model/gedcomx/trunk</developerConnection>
    <url>https://vcs.fsglobal.net/svn/model/gedcomx/trunk</url>
  </scm>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.codehaus.enunciate</groupId>
        <artifactId>enunciate-core-rt</artifactId>
        <version>${enunciate.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-idea-plugin</artifactId>
        <configuration>
          <downloadSources>false</downloadSources>
          <downloadJavadocs>false</downloadJavadocs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.google.code.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <version>1.4.0</version>
        <configuration>
          <header>${root.basedir}/LICENSE-header.txt</header>
          <includes>
            <include>src/main/java/**</include>
          </includes>
          <properties>
            <copyright.year>${inceptionYear}</copyright.year>
          </properties>
        </configuration>
        <executions>
          <execution>
            <phase>verify</phase>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.enunciate</groupId>
          <artifactId>maven-enunciate-plugin</artifactId>
          <version>${enunciate.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <ciManagement>
    <system>hudson</system>
    <url>http://build5.usys.org:8080/job/gedcomx/</url>
    <notifiers>
      <notifier>
        <type>mail</type>
        <configuration>
          <recipients>heatonra@familysearch.org</recipients>
        </configuration>
        <sendOnSuccess>true</sendOnSuccess>
        <sendOnError>true</sendOnError>
        <sendOnFailure>true</sendOnFailure>
        <sendOnWarning>true</sendOnWarning>
      </notifier>
    </notifiers>
  </ciManagement>

  <modules>
    <module>gedcomx-types</module>
    <module>gedcomx-attribution</module>

    <module>gedcomx-source</module>
    <module>gedcomx-record</module>
    <module>gedcomx-conclusion</module>

    <module>gedcomx-metadata</module>

    <module>gedcomx-www</module>
    <module>gedcomx-source-www</module>
    <module>gedcomx-record-www</module>
    <module>gedcomx-conclusion-www</module>
  </modules>
</project>
